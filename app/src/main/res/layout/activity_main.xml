<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/rotation_direction"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="16dp" />

    <RadioGroup
        android:id="@+id/rotation_radioGroup"
        android:layout_width="258dp"
        android:layout_height="103dp"
        tools:layout_editor_absoluteX="137dp"
        tools:layout_editor_absoluteY="6dp">

        <RadioButton
            android:id="@+id/rdb_clockwise"
            android:layout_width="109dp"
            android:layout_height="46dp"
            android:text="@string/rdb_clockwise" />

        <RadioButton
            android:id="@+id/rdb_counterclockwise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rdb_counterclockwise" />
    </RadioGroup>

    <Button
        android:id="@+id/btn_startgame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_startgame"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
